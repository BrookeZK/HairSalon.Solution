@{
  Layout = "_Layout";
}
<h1>Specialties</h1>
<h2><em>Select a Specialty for details</em></h2>

<ul>
    @if (Model.Count == 0)
    {
        <p>No specialties have been added yet!</p>
    }
    @if(Model.Count != 0)
    {
        @foreach (var specialty in Model)
        {
            <a href="/specialties/@specialty.Id" class="btn btn-dark">@specialty.Name</a><br>
        }
    }
</ul>

<h1><a href="/specialties/new" class="btn btn-dark">Add a new specialty</a></h1>
<a href="/login" class="btn btn-dark">Back to homepage</a>
<form action="/specialties/delete-specialties" method="post">
    <button type="submit" class="btn btn-dark">Delete ALL specialties</button>
</form>
